/* 加载动效 */
.loading{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}
.loading image{
  margin-right: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.loading_more{
  width: 100%;
  padding: 30rpx 0;
  margin:0 auto;
  color: #999999;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loading_more image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
