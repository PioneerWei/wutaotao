@import "../../poster/catdetailsposter/catdetailsposter.wxss";
@import "../../loading/loading.wxss";
.details-content {
  padding: 0 30rpx 30rpx 30rpx;
  text-align: center;
  background: #fff;
}

.guoqiStatu {
  color: #999 !important;
}

.details-img {
  width: 400rpx;
  height: 400rpx;
}

.font {
  font-size: 34rpx;
  line-height: 50rpx;
}

.read {
  margin: 10rpx auto;
  background: #f7f7f7;
  width: 145rpx;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
  color: #999;
}

.read text {
  color: #ffc600;
}

.details-title text {
  display: block;
}

.details-title-text2 {
  margin: 20rpx 0;
  color: #ff5f67;
}

.details-title-text3 {
  color: #999;
  font-size: 24rpx;
}

.details-sharefriend {
  display: flex;
  align-items: center;
  margin: 30rpx auto;
  width: 190rpx;
  height: 50rpx;
  background: linear-gradient(to right, rgba(255, 191, 54, 0.88), #ff9844);
  border-radius: 33rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 33rpx;
}

.details-guoqi {
  margin: 30rpx auto;
  width: 190rpx;
  line-height: 50rpx;
  background: #f5f5f5;
  border-radius: 33rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.details-sharefriend image {
  margin: 0 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.strategy {
  padding: 30rpx;
  margin: 10rpx 0;
  background: #fff;
}

.strategy image {
  margin: 20rpx 0;
  width: 100%;
  height: 388rpx;
}

.strategy-tit {
  font-size: 32rpx;
  line-height: 45rpx;
  font-weight: 600;
}

.strategy-content {
  font-size: 28rpx;
  color: #151515;
  line-height: 50rpx;
}

.details-scroll {
  margin-bottom: 10rpx;
  background: #fff;
}

.details-scroll scroll-view {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
}

.details-scroll-list {
  margin-left: 30rpx;
  display: inline-block;
}

.details-scroll-list image {
  width: 240rpx;
  height: 240rpx;
}

.scroll-tit {
  padding-top: 30rpx;
  margin: 0 0 20rpx 30rpx;
  font-size: 32rpx;
  line-height: 45rpx;
}

.scroll-font {
  font-size: 24rpx;
  line-height: 33rpx;
}

.scroll-list-tit {
  margin: 20rpx 0;
  width: 240rpx;
  height: 66rpx;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.scroll-price {
  display: block;
  padding-bottom: 30rpx;
  color: #ff5f67;
}

.indexbtn {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 66rpx;
  height: 66rpx;
}

.footershare {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 80rpx;
  box-shadow: 0 -5px 10px 0 rgba(142, 154, 181, 0.10);
}

.share-left {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 186rpx;
  height: 100%;
  background: #fff;
}

.share-left view {
  width: 50%;
  height: 100%;
  text-align: center;
}

.share-left image {
  margin-top: 21rpx;
  width: 38rpx;
  height: 38rpx;
}

.purchase-right {
  width: 564rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(to right, rgba(255, 191, 54, 1), #ff9844);
  font-size: 28rpx;
  color: #fff;
}

.alert-box {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.copylink-alert {
  padding: 50rpx 30rpx;
  margin: 419rpx auto;
  width: 560rpx;
  background: #fff;
  border-radius: 8rpx;
  text-align: center;
}

.alert-tit {
  font-size: 34rpx;
  line-height: 48rpx;
}

.alert-con {
  margin-top: 30rpx;
  margin-bottom: 50rpx;
  font-size: 26rpx;
  line-height: 37rpx;
  color: #999;
}

.alert-btn {
  margin: 0 auto;
  width: 238rpx;
  line-height: 66rpx;
  border-radius: 33rpx;
  background: linear-gradient(to right, rgba(255, 191, 54, 0.88), #ff9844);
  color: #fff;
  font-size: 26rpx;
}

.buy_type {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 860rpx;
  background: #fff;
}

.buy_type_tit {
  padding: 10rpx 30rpx;
  background: #f7f7f7;
  font-size: 24rpx;
  color: #999;
}

.buy_type_content {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 40rpx 0;
  width: 720rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f7f7f7;
}

.buy_type_content text {
  display: inline-block;
  width: 644rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.buy_type_content image {
  margin-left: 30rpx;
  width: 12rpx;
  height: 24rpx;
}
